    <ImageView
        android:id="@+id/imgAlar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/alarm" />
</LinearLayout>